{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "shorts-factory",
  "version": "1.0.0",
  "identifier": "com.shortsfactory.app",
  "build": {
    "frontendDist": "../public",
    "devUrl": "http://localhost:4567",
    "beforeDevCommand": "node server.js",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "쇼츠공장",
        "width": 1280,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
